@model FirstWebMVC.Models.BMIModel

<h2>Tính Chỉ Số BMI</h2>

<form asp-action="Index" method="post">
    <label>Nhập cân nặng (kg):</label>
    <input type="number" asp-for="Weight" step="0.1" required />

    <label>Nhập chiều cao (m):</label>
    <input type="number" asp-for="Height" step="0.01" required />

    <button type="submit">Tính BMI</button>
</form>

@if (ViewBag.BMI != null)
{
    <h3>Kết quả:</h3>
    <p>Chỉ số BMI: <strong>@ViewBag.BMI</strong></p>
    <p>Trạng thái: <strong>@ViewBag.Result</strong></p>
}
